{% extends 'layout.twig' %}

{% block content %}
  <section class="auth container" aria-labelledby="login-heading">
    <div class="auth-card card">
      <h2 id="login-heading">Login</h2>
      <form id="login-form" novalidate>
        <div class="form-row">
          <label for="email">Email</label>
          <input id="email" name="email" type="email" required aria-required="true">
          <div class="field-error" id="email-error" aria-live="polite"></div>
        </div>

        <div class="form-row">
          <label for="password">Password</label>
          <input id="password" name="password" type="password" required aria-required="true">
          <div class="field-error" id="password-error" aria-live="polite"></div>
        </div>

        <div class="form-actions">
          <button class="btn btn-primary" type="submit">Sign in</button>
          <a href="/auth/signup" class="btn btn-ghost">Create account</a>
        </div>
      </form>
    </div>
  </section>
{% endblock %}
