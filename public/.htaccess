# public/.htaccess
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # If the requested filename exists, serve it directly
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d

  # otherwise send the request to index.php
  RewriteRule ^ index.php [QSA,L]
</IfModule>
